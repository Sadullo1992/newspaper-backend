generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   String @id @default(uuid())
  name String
  slug String
  Post Post[]
}

model Post {
  id         String  @id @default(uuid())
  title      String
  categoryId String
  slug       String
  content    String
  createdAt  String
  updatedAt  String
  isActual   Boolean @default(false)
  isFeatured Boolean @default(false)
  views      Int     @default(0)
  author     String?

  category Category? @relation(fields: [categoryId], references: [id])
}
